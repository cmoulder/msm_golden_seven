
<head>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.7/paper/bootstrap.min.css">
  <style type="text/css">
  div.row {
    border: 1px solid darkgrey;
    border-radius: 4px;
    margin-top: -top: 10px;
    margin-bottom: 10px;
  }
  </style>
</head>

<h2><a href="/movies">Movies</a> <a href="/directors">Directors</a> <a href="/actors">Actors</a> </h2>
<br>
<h1>Movies</h1>
<a href="/movies/new_form">Add New</a>
<div class="container">
  <div class="row">
    <div class="col-sm-offset-1 col-sm-2">Image</div>
    <div class="col-sm-2">Title</div>
    <div class="col-sm-2">Duration</div>
    <div class="col-sm-2">Description</div>
    <div class="col-sm-2">Actions</div>
  </div>
  <% @movies.reverse.each do |movie| %>
  <div class="row">
    <div class="col-sm-offset-1 col-sm-2"><img src="<%= movie.image_url %>" width="80"></div>
    <div class="col-sm-2"><%= movie.title %> (<%= movie.year %>)</div>
    <div class="col-sm-2"><%= movie.duration %></div>
    <div class="col-sm-2"><%= movie.description %></div>
    <div class="col-sm-2">
      <a href="/movies/<%= movie.id %>" class="btn btn-default">
        Show Details
      </a>
      <a href="/movies/<%= movie.id %>/edit" class="btn btn-default">
        Edit
      </a>
      <a href="/delete_movie/<%= movie.id %>" class="btn btn-default">
        Delete
      </a>

    </div>
  </div>
  <% end %>

</div>
